{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "max-line-length": [
      true,
      {
        "limit": 140,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
    ],
    "no-console": [
      true,
      "log"
    ],
    "semicolon": [
      true,
      "always",
      "strict-bound-class-methods"
    ],
    "typedef": [
      true,
      "call-signature",
      "property-declarations"
    ],
    "no-empty-interface": false,
    "no-var-requires": false
  },
  "rulesDirectory": []
}
